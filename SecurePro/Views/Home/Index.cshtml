@{
    ViewData["Title"] = "Home Page";
}
<form class="container">
  <div class="row">
    <div class="col bg-secondary bg-opacity-10 p-0 rounded-3 m-2">
      <div class="bg-primary border-4 p-2 rounded-3 text-center">Информация для пропуска</div>
      <div class="p-2">
        <div class="form-group">
          <label for="from">срок действия заявки:</label>
          <div>c <input type="date" class="form-control" id="from"> по <input type="date" class="form-control" id="to"></div>
        </div>
        <div class="form-group">
          <label for="purpose">цель посещения:</label>
          <select class="form-select" name="purpose" id="purpose">
            <option value="value1">Значение 1</option>
            <option value="value2" selected>Значение 2</option>
            <option value="value3">Значение 3</option>
          </select>
        </div>
      </div>
    </div>
    <div class="col bg-secondary bg-opacity-10 p-0 rounded-3 m-2">
      <div class="bg-primary border-4 p-2 rounded-3 text-center">Принимающая сторона</div>
      <div class="p-2">
        <div class="form-group">
          <label for="division">Подразделение:</label>
          <select class="form-select" name="division" id="division">
            <option value="value1">Значение 1</option>
            <option value="value2" selected>Значение 2</option>
            <option value="value3">Значение 3</option>
          </select>
        </div>
        <div class="form-group">
          <label for="fullname">ФИО:</label>
          <input type="text" class="form-control" id="fullname">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col bg-secondary bg-opacity-10 p-0 rounded-3 m-2">
      <div class="bg-primary border-4 p-2 rounded-3 text-center">Информация о поситителе</div>
      <div class="container p-2">
        <div class="row">
          <div class="col">
            <div class="form-group row">
              <label class="col-sm-2" for="lastname">Фамилия:</label>
              <div class="col"><input type="text" class="form-control" id="lastname"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2" for="firstname">Имя:</label>
              <div class="col"><input type="text" class="form-control" id="firstname"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2" for="patronymic">Отчество:</label>
              <div class="col"><input type="text" class="form-control" id="patronymic"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2" for="phone">Телефон:</label>
              <div class="col"><input type="text" class="form-control" id="phone"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2" for="email">E-mail:</label>
              <div class="col"><input type="email" class="form-control" id="email"></div>
            </div>
          </div>
          <div class="col">
            <div class="form-group row">
              <label class="col-sm-4" for="organization">Организация:</label>
              <div class="col"><input type="text" class="form-control" id="organization"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4" for="note">Примечание:</label>
              <div class="col"><input type="text" class="form-control" id="note"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4" for="bday">Дата рождения:</label>
              <div class="col"><input type="date" class="form-control" id="bday"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4" for="series">Серия:</label>
              <div class="col"><input type="number" class="form-control" id="series"></div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4" for="number">Номер:</label>
              <div class="col"><input type="number" class="form-control" id="number"></div>
            </div>
          </div>
          <div class="col-sm-2">
            <button type="submit" class="btn btn-primary mb-2">Загрузить фото</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col bg-secondary bg-opacity-10 p-0 rounded-3 m-2">
      <div class="bg-primary border-4 p-2 rounded-3 text-center">Прикрепляемые документы</div>
      <div class="p-2">
        Прикрепить документы
      </div>
    </div>
    <div class="col p-2">
      <button class="btn btn-secondary mb-2">Очистить заявку</button>
      <button type="submit" class="btn btn-primary mb-2">Оформить заявку</button>
    </div>
  </div>
</form>